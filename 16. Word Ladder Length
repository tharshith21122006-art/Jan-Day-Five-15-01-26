import java.util.*;

class WordLadder {
    public static void main(String[] args) {
        String start="hit", end="cog";
        Set<String> set=new HashSet<>(List.of("hot","dot","dog","lot","log","cog"));
        Queue<String> q=new LinkedList<>();
        q.add(start); int step=1;

        while(!q.isEmpty()){
            for(int s=q.size();s>0;s--){
                String w=q.poll();
                if(w.equals(end)){System.out.println(step); return;}
                char[] ch=w.toCharArray();
                for(int i=0;i<ch.length;i++)
                    for(char c='a';c<='z';c++){
                        char old=ch[i];
                        ch[i]=c;
                        String nw=new String(ch);
                        if(set.remove(nw)) q.add(nw);
                        ch[i]=old;
                    }
            }
            step++;
        }
    }
}
