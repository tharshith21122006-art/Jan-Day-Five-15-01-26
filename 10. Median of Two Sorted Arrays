import java.util.*;

class Median {
    public static void main(String[] args) {
        int[] a={1,3}, b={2};
        int[] c=new int[a.length+b.length];
        System.arraycopy(a,0,c,0,a.length);
        System.arraycopy(b,0,c,a.length,b.length);
        Arrays.sort(c);
        int n=c.length;
        System.out.println(n%2==1?c[n/2]:(c[n/2-1]+c[n/2])/2.0);
    }
}
