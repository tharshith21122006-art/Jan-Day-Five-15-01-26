import java.util.*;

class Dijkstra {
    static class Node {
        int v,w;
        Node(int v,int w){this.v=v;this.w=w;}
    }

    public static void main(String[] args) {
        Map<Integer,List<Node>> g = new HashMap<>();
        g.put(0,List.of(new Node(1,1),new Node(2,4)));
        g.put(1,List.of(new Node(2,2)));

        int[] dist = new int[3];
        Arrays.fill(dist,Integer.MAX_VALUE);
        dist[0]=0;

        PriorityQueue<Node> pq = new PriorityQueue<>(Comparator.comparingInt(a->a.w));
        pq.add(new Node(0,0));

        while(!pq.isEmpty()){
            Node cur = pq.poll();
            for(Node n : g.getOrDefault(cur.v,new ArrayList<>())){
                if(dist[n.v] > cur.w + n.w){
                    dist[n.v] = cur.w + n.w;
                    pq.add(new Node(n.v, dist[n.v]));
                }
            }
        }
        System.out.println(dist[2]);
    }
}
